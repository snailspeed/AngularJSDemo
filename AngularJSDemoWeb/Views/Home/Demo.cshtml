@{
    ViewBag.Title = "Demo";
}

<h2>angularJS Demo</h2>

<div ng-app="MyDemo" ng-controller="personController">

    名    : <input type="text" ng-model="person.firstName"><br>
    姓    : <input type="text" ng-model="person.lastName"><br>
    年龄: <input type="text" ng-model="person.age"><br>
    <br>
    姓名: {{person.firstName + " " + person.lastName}} </br>
    年龄: {{person.age}}

</div>

<script>
    angular.module('MyDemo', [])
        .controller('personController', ['$scope', function ($scope) {
            $scope.person = {
                firstName: "John",
                lastName: "Doe",
                age: 26
            };
        }]);
</script>


